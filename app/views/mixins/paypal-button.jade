mixin paypal(buttontext)
	form(action='https://www.paypal.com/cgi-bin/webscr' method='post' target='_top')
		input(type='hidden' name='cmd' value='_s-xclick')
		input(type='hidden' name='hosted_button_id' value='HR483Z8UVFDBU')
		input(type='hidden' name='currency_code' value='USD')
		input(type='hidden' name='page_style' value='WhatWentWell')
		input(type='hidden' name='on0' value='Level')


		.pad.vspace: .theme-highlight.row.pad
			.col-sm-4
				h4 Contribution 
					span.hidden-xs Level
				select.wide(name='os0' style='min-width:98px')
					option(value='II') Level II $50
					option(value='I' selected) Level I $35
					option(value='Scholarship (30)') Scholarship $30
					option(value='Scholarship (25)') Scholarship $25
					option(value='Scholarship (20)') Scholarship $20
					option(value='Scholarship (15)') Scholarship $15
					option(value='Scholarship (10)') Scholarship $10
					option(value='Scholarship (5)') Scholarship $5
					option(value='Scholarship (0)') Scholarship $0.01
				.visible-xs: .space-above

			.col-sm-8
				//- input(type='image' src='https://www.paypalobjects.com/en_US/i/btn/btn_buynow_LG.gif' border='0' name='submit' alt='PayPal - The safer easier way to pay online!')
				button.btn.btn-block.btn-lg.btn-primary= buttontext
				img.left(alt='' border='0' src='https://www.paypalobjects.com/en_US/i/scr/pixel.gif' width='1' height='1')
